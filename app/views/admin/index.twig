{% extends 'layout.twig' %}

{% block content %}
<h2>Admin Panel</h2>
<p>Welcome {{ loggedUser.name }}</p>
<ul>
  <li>
    <a href="{{ 'admin/posts' | url }}">Manage Posts</a>
  </li>
  {% if loggedUser.user_role == 1 %}
    <li>
      <a href="{{ 'admin/users' | url }}">Manage Users</a>
    </li>
  {% endif %}
  <li>
    <a href="{{ 'auth/logout' | url }}">Logout</a>
  </li>
</ul>
{% endblock %}
