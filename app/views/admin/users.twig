{% extends 'layout.twig' %}

{% block content %}
<h2>Users</h2>
<div class="mb-3">
  <a class="btn btn-secondary" href="{{ 'admin' | url }}">Back</a>
  <a class="btn btn-primary" href="{{ 'admin/users/create' | url }}">New User</a>
</div>
<table class="table">
  <tr>
    <th>Name</th>
    <th>email</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

  {% for user in users %}
      <tr>
        <td>{{ user.name }}</td>
        <td>{{ user.email }}</td>
        <td>
          <a href="{{ 'admin/users/edit/' | url }}{{ user.id }}">
            <i class="fas fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="{{ 'admin/users/delete/' | url }}{{ user.id }}">
            <i class="fas fa-trash"></i>
          </a>
        </td>
      </tr>
  {% endfor %}
</table>
{% endblock %}
