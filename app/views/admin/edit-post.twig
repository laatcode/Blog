{% extends 'layout.twig' %}

{% block content %}
<h2>Edit Posts</h2>
<div class="mb-3">
  <a class="btn btn-secondary" href="{{ 'admin/posts' | url }}">Back</a>
</div>
{% if errors %}
  {% include('partials/errors.twig') %}
{% endif %}

{% if result %}
  <div class="alert alert-success">Post Saved!</div>
{% endif %}

<form method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label for="inputTitle">Title</label>
    <input class="form-control" type="text" name="title" id="inputTitle" value="{{ blogPost.title }}">
  </div>
  <div class="custom-file mb-3">
    <input type="file" class="custom-file-input" name="img" id="customFile" accept="image/*">
    <label class="custom-file-label" for="customFile">Choose file</label>
  </div>
  <div class="form-group">
    <label for="inputContent">Content</label>
    <textarea id="inputContent" class="form-control" name="content" rows="5">{{ blogPost.content }}</textarea>
  </div>
  <div class="form-group">
    <input class="btn btn-primary" type="submit" value="Save">
  </div>
</form>
{% endblock %}
