{% extends 'layout.twig' %}

{% block content %}
  {% for blogPost in blogPosts %}
    <a class="post" href="post&id={{ blogPost.id }}">
      <div class="blog-post">
        <h2>{{ blogPost.title }}</h2>
        <p>{{ blogPost.created_at | date('M d, Y h:i a') }} by {{ blogPost.user.name }}</p>
        <div class="blog-post-content">
          {{ blogPost.content }}
        </div>
      </div>
    </a>
  {% endfor %}
{% endblock %}
